SHOW DATABASES;
CREATE DATABASE HRDTest;
USE HRDTest;

SHOW TABLES;

-- 1. Employee(사원관리) 테이블을 생성하시오.
CREATE TABLE employee(
EmpNo INT PRIMARY KEY AUTO_INCREMENT,
EmpName VARCHAR (30) NOT NULL,
Dept VARCHAR (20) NOT NULL,
HireDate DATE NOT NULL,
Salary INT, 
CHECK (Salary >=2000000)
);

SELECT * FROM employee;
USE HRDTest;

-- 2. SQL문으로 작성하시오
-- 1) 사원등록 데이터를 삽입하시오.
INSERT INTO employee(EmpNo,EmpName,Dept,HireDate,Salary) VALUES
(1,'홍길동','영업부','2020-03-01',2500000),
(2,'이순신','인사부','2019-07-15',3200000),
(3,'강감찬','개발부','2021-01-10',2800000);

-- 2) 조회.. 
SELECT*FROM employee;
SELECT*FROM employee WHERE Dept ='개발부';
-- 2-1) 개발부인 사원을 사번, 이름 , 급여를 조회하시오.
SELECT EmpNo AS 사번,EmpName AS 이름,Salary AS 급여
FROM employee WHERE Dept ='개발부';

-- 2-2) 급여가 3,000,000원 이상인 사원의 이름과 부서를 조회하시오.
SELECT EmpName AS 이름, Dept AS 부서,Salary AS 급여
FROM employee
WHERE Salary >=3000000 ;

-- 3) 수정 : 이순신의 급여를 3,500,000원으로 수정하시오.
UPDATE employee
SET Salary = 3500000
WHERE EmpName ='이순신';

SELECT * FROM employee;

-- 4)삭제 : 사번 1번인 사원 정보 삭제
DELETE from employee
WHERE EmpNo = '1'; 

SELECT*FROM employee;

CREATE DATABASE HRDTest;

RENAME TABLE ex_02.employee TO HRDTest.employee;

SHOW DATABASES ;

SHOW TABLES;
SELECT*FROM employee;




